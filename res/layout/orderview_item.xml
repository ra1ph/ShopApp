<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dip"
    android:orientation="horizontal" >

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basket_image_item"
        android:layout_width="80dip"
        android:layout_height="80dip" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="30dip" >

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/basket_name_item"
                style="@style/Midle_common"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:text="Test_item" />
        </RelativeLayout>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/basket_description_item"
            style="@style/Small_common"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:text="Test description" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/basket_cost_scale"
                style="@style/Midle_common"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dip"
                android:text="USD" />
    "

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/basket_cost_item"
                style="@style/Midle_common"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/basket_cost_scale"
                android:text="500.0" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>